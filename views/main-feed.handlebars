 <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand main-nav" href="#">GitWorkd</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav ml-auto">
          <a class="nav-link" href="/feed"><i class="fas fa-comment-alt"></i> Feed</a>
          <a class="nav-link" href="/savedRepos"><i class="fas fa-archive"></i> Saved Repos</a>
          <a class="nav-link" href="/addRepo"><i class="fas fa-plus-square"></i> Add Repos</a>
        </div>
      </div>
    </nav>

<div class="container">
    <div class="row mt-3">
        <div class="col-sm-3">
            <div class="card user-card animate__animated animate__fadeIn">
                <img src="{{image path of user}}" class="card-img-top" alt="Picture of user">
                <div class="card-body">
                    <h3 class="card-title user-name text-center"><i class="fab fa-github mr-1"></i>{{github username of logged in user}}</h3>
                </div>
                <ul class="list-group list-group-flush text-center">
                    <li class="list-group-item">{{Number of repos user has posted}}</li>
                    <li class="list-group-item">{{Most used/preferred language of user}}</li>
                    <li class="list-group-item">{{Member Since..?}}</li>
                </ul>
            </div>
        </div>
        <div class="col-sm-8">
            {{#each repo}}
                <div class="row">
                    <div class="col-sm-10 mx-auto repo-card card text-center animate__animated animate__fadeIn">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h2 class="card-title">{{Repo title goes here}}</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <h5><i class="fab fa-github"></i> Author</h5>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h6>{{github username}}</h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <h5><i class="fas fa-layer-group"></i> Technologies</h5>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h6>{{Technologies...}}</h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <h5><i class="fas fa-people-arrows"></i> Compatibility</h5>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h6 class="compat">{{compatibility rating}}</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12 mt-3">
                                    <button class="btn btn-outline-light btn-sm mr-3 save-repo" data-id={{id of repo}}>Save Repo</button>
                                    <a href="{{link to repo}}" class="btn btn-outline-light btn-sm">View Repo</a>
                                    {{!-- {{Change button to a tag that links to github repo?}} --}} 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>